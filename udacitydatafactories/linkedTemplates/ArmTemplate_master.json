{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "udacitydatafactories"
		},
		"linked_datalakestorage_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'linked_datalakestorage'"
		},
		"linked_sqldatabase_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'linked_sqldatabase'"
		},
		"linked_datalakestorage_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://udacitystorageaccount.dfs.core.windows.net/"
		},
		"linked_sqldatabase_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "piplinesqldatabase.database.windows.net"
		},
		"linked_sqldatabase_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "payrolldatabase"
		},
		"linked_sqldatabase_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "database"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "udacitydatafactories_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"linked_datalakestorage_accountKey": {
						"value": "[parameters('linked_datalakestorage_accountKey')]"
					},
					"linked_sqldatabase_password": {
						"value": "[parameters('linked_sqldatabase_password')]"
					},
					"linked_datalakestorage_properties_typeProperties_url": {
						"value": "[parameters('linked_datalakestorage_properties_typeProperties_url')]"
					},
					"linked_sqldatabase_properties_typeProperties_server": {
						"value": "[parameters('linked_sqldatabase_properties_typeProperties_server')]"
					},
					"linked_sqldatabase_properties_typeProperties_database": {
						"value": "[parameters('linked_sqldatabase_properties_typeProperties_database')]"
					},
					"linked_sqldatabase_properties_typeProperties_userName": {
						"value": "[parameters('linked_sqldatabase_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "udacitydatafactories_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'udacitydatafactories_ArmTemplate_0')]"
			]
		}
	]
}